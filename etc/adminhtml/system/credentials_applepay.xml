<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="hipay_credentials_applepay" translate="label" type="text" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>HiPay Enterprise Apple Pay credentials</label>
        <field id="api_username" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Api username (production account)</label>
        </field>
        <field id="api_password" translate="label" type="obscure" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Api password (production account)</label>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>
        <field id="secret_passphrase" translate="label comment" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Secret passphrase (production account)</label>
            <comment>The same of your HiPay Enterprise Apple Pay production account</comment>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>
        <field id="api_username_test" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Api username (test account)</label>
        </field>
        <field id="api_password_test" translate="label" type="obscure" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Api password (test account)</label>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>
        <field id="secret_passphrase_test" translate="label comment" type="obscure" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Secret passphrase (test account)</label>
            <comment>The same of your HiPay Enterprise Apple Pay test account</comment>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>
    </group>
</include>
